<!--pages/user/setGender/setGender.wxml-->
<view class="index">
   <view class="interval"></view>
   <form bindsubmit="getGender">
      <view class="index-bd">
         <view class="kind-list">
            <view class="kind-list-item">
               <view class="kind-list-item-hd">
                  <block wx:if="{{hidden===false}}">
                     <view name="sex" class="kind-list-text">男</view>
                     <image class="kind-list-img" src="../../../images/checked.png"></image>
                  </block>
                  <block wx:if="hidden===true">
                     <view name="sex" class="kind-list-text">男</view>
                  </block>
               </view>
            </view>
            <view class="inter"></view>
             <view class="kind-list-item">
               <view class="kind-list-item-hd">
                  <block wx:if="{{hidden===false}}">
                     <view name="sex" class="kind-list-text">女</view>
                     <image class="kind-list-img" src="../../../images/checked.png"></image>
                  </block>
                  <block wx:if="hidden===true">
                     <view name="sex" class="kind-list-text">女</view>
                  </block>
               </view>
            </view>
         </view>
      </view>
      <view class="interval"></view>
      <button class="btn" form-type="submit">确定</button>
   </form>
</view>