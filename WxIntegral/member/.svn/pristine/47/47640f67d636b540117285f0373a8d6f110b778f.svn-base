/* pages/store/birthday/birthday.wxss */

.all {
   font: 32rpx Apple LiGothic Medium,
          Microsoft YaHei,
          SimSun,
          Arial,
          Helvetica,
          sans-serif;
   background-color: #fff;
   color: #626262;
}

.interval {
   width: 100%;
   height: 20rpx;
   background-color: #eee;
}

.headImg {
   width: 750rpx;
   height: 300rpx;
   display: block;
}

.middle {
   height: 120rpx;
   width: 100%;
   line-height: 120rpx;
   font-size: 36rpx;
   border-bottom: 2rpx solid #eee;
   padding: 24rpx 24rpx;
}

.flex-wrp {
   display: flex;
   border-bottom: 2rpx solid #eee;
}

.flex-item {
   display: flex;
   justify-content: center;
   align-items: center;
   text-align: center;
}

.b-member1 {
   height: 52rpx;
   width: 64rpx;
   margin-left: 20rpx;
   margin-right:20rpx;
}

.info1 {
   width: 150rpx;
   font-size: 36rpx;
}

.angleRight {
   display: flex;
   justify-content: center;
   align-items: center;
   text-align: left;
   height: 100rpx;
   width: 450rpx;
   background: url(../../../images/angleRight.png) no-repeat right center;
   /* padding-right: 40rpx;    */
   color: #c3c3c3;
   font-size: 28rpx;
}

.title {
   height: 120rpx;
   line-height: 120rpx;
   padding: 0 48rpx;
   font-size: 48rpx;
   border-bottom: 2rpx solid #eee;
   font-weight: 600;
}

.para {
   padding: 0 48rpx;
   font-size: 36rpx;
   line-height: 50rpx;
   margin: 20rpx 0;
}

.tips {
   font-size: 40rpx;
   padding: 0 24px;
   margin: 20px 0;
   text-align: center;
}
.load{
    width: 400rpx;
    height: 200rpx;
    position: fixed;
    top: 50%;
    left: 50%;
    margin-top: -100rpx;
    margin-left: -200rpx; 
    z-index: 9999;
    border-radius: 20rpx;
    overflow: hidden;
}
.bg{
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
    background-color: #000;
    opacity: 0.5;
    z-index: -2;
}
.loading{
    text-align: center;
    height: 100rpx;
    font-size: 30rpx;
    /* background-color: #fff; */
    color: #fff;
    margin-top: 60rpx;
    /* z-index: 1; */
}
.loader{
    display: block;
    font-size: 20rpx;
    padding: 0rpx;
}
.all_span{
    width: 20rpx;
    height: 20rpx;
    margin: 0rpx 16rpx;
    vertical-align: middle; 
    /* background-color: #fff; */
    border-radius: 100%;
    display: inline-block;
    background: rgba(0,160,233,0.6);
     /* animation: loader 3s linear infinite alternate;   */
}
.loader_span1{
    /* animation-delay: -1s;   */
  
}
.label{
    height: 30rpx;
    line-height: 30rpx;
    margin-top: 30rpx;
    letter-spacing: 6rpx;
}