/* pages/user/nicknameChange/nicknameChange.wxss */

.input-module {
   width: 100%;
   height: 100rpx;
   line-height: 100rpx;
   display: flex;
   padding: 0 24rpx;
}

.text {
   width: 160rpx;
   color: #626262;
   height: 100rpx;
   line-height: 100rpx;
   font-size: 40rpx;
}

.nick-image {
   height: 40rpx;
   width: 40rpx;
   position: absolute;
   margin-top: 32rpx;
   right: 35rpx;
}

.nick-input {
   height: 60rpx;
   margin-top: 23rpx;
}

.interval {
   height: 20rpx;
   width: 100%;
   background-color: #eee;
   border: 1rpx solid #eee;
}

