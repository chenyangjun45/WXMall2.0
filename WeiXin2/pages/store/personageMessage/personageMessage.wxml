<!--pages/component/personageMessage/personageMessage.wxml-->
<import src="../../templates/loaderTemplate.wxml" />
<view class="userContent">
  <view class="flex-wrp" style="flex-direction:row;">
    <view class="leftContent">
      <text class="textLeft">头像</text>
    </view>
    <view class="rightContent" style="flex-direction:row;">
      <image class="userImage" src="{{userImage}}" bindtap="chooseImage"/>
      <image class="rightRaw" mode="aspectFit" src="../../../images/angleRight.png"></image>
    </view>
  </view>
  <view class="divice"></view>
  <view class="flex-wrp" style="flex-direction:row;">
    <view class="leftContent">
      <text class="textLeft">昵称</text>
    </view>
    <view class="rightContent" bindtap="setNick" style="flex-direction:row;">
      <text class="textRight">{{nickname}}</text>
      <image class="rightRaw" mode="aspectFit" src="../../../images/angleRight.png"></image>
    </view>
  </view>
  <view class="flex-wrp" style="flex-direction:row;">
    <view class="leftContent">
      <text class="textLeft">性别</text>
    </view>
    <view class="rightContent" bindtap="setMale" style="flex-direction:row;">
      <text class="textRight">{{male}}</text>
      <image class="rightRaw" mode="aspectFit" src="../../../images/angleRight.png"></image>
    </view>
  </view>
  <view class="divice"></view>
  <view class="flex-wrp" style="flex-direction:row;">
    <view class="leftContent">
      <text class="textLeft">生日</text>
    </view>
    <view class="rightContent" bindtap="setBirth" style="flex-direction:row;">
      <text class="textRight">{{birthday}}</text>
      <image class="rightRaw" mode="aspectFit" src="../../../images/angleRight.png"></image>
    </view>
  </view>
  <view class="flex-wrp" style="flex-direction:row;">
    <view class="leftContent">
      <text class="textLeft">车牌</text>
    </view>
    <view class="rightContent"  bindtap="setCar" style="flex-direction:row;">
      <text class="textRight">{{numberPlate}}</text>
      <image class="rightRaw" mode="aspectFit" src="../../../images/angleRight.png"></image>
    </view>
  </view>
  <view class="divice"></view>
  <view class="flex-wrp" style="flex-direction:row;">
    <view class="leftContent">
      <text class="textLeft">收货地址</text>
    </view>
    <view class="rightContent" style="flex-direction:row;">
      <text class="textRight">{{address}}</text>
      <image class="rightRaw" mode="aspectFit" src="../../../images/angleRight.png"></image>
    </view>
  </view>
  <view class="divice"></view>
  <view class="flex-wrp" style="flex-direction:row;">
    <view class="leftContent">
      <text class="textLeft">其他资料</text>
    </view>
    <view class="rightContent" style="flex-direction:row;">
      <text class="textRight">{{otherInformation}}</text>
      <image class="rightRaw" mode="aspectFit" src="../../../images/angleRight.png"></image>
    </view>
  </view>
  <view class="divice"></view>
</view>

<!-- 注意弹出弹框以后，别的区域都不能点 -->
<!-- <loading  class="loading" hidden="{{loadingHidden}}"  bindtap="disappear">
    加载中
  </loading>  -->
<template is="loaderTemplate" data="{{hideLoader}}" bindtap="disappear"></template>